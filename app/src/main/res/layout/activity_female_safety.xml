<!-- activity_emergency.xml -->

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainFS"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/platinum">

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="130dp"
    android:layout_marginRight="30dp"
    android:layout_marginLeft="30dp"
    app:cardCornerRadius="30dp">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/textfemale"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginTop="50dp"
        android:text="Female Safety"
        android:textAlignment="center"
        android:textSize="25dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textwomehelpline"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="if you are in any emergency, Please contact on these numbers"
        android:textAlignment="center"
        android:layout_below="@id/textfemale"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"/>

    <!-- Button to call women safety -->
    <Button
        android:id="@+id/btnWomenSafety"
        android:layout_width="230dp"
        android:layout_height="60dp"
        android:text="Call Women Helpline"
        android:layout_below="@+id/textwomehelpline"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="16dp"
        android:layout_alignParentLeft="true"
        android:onClick="onWomenSafetyButtonClick"
        android:backgroundTint="@color/brunswick_green"/>

    <Button
        android:id="@+id/btnPolice"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:text="Call Police"
        android:layout_below="@+id/textwomehelpline"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="16dp"
        android:onClick="onPoliceButtonClick"
        android:layout_alignRight="@+id/btnWomenSafety"
        android:backgroundTint="@color/Red"/>

    <!--<Button
        android:id="@+id/btnSaveNumber"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:text="Save Emergency Number"
        android:layout_below="@id/btnPolice"
        android:layout_marginStart="30dp"
        android:onClick="onSaveNumberButtonClick" />

    <Button
        android:id="@+id/btnCallSavedNumber"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="Call Saved Number"
        android:layout_below="@id/btnPolice"
        android:layout_marginEnd="30dp"
        android:layout_alignParentRight="true"
        android:onClick="onCallSavedNumberButtonClick" />-->

</RelativeLayout>
    </androidx.cardview.widget.CardView>
</ScrollView>